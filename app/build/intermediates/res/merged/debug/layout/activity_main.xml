<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="edu.slcc.rstewart.hangdroid.MainActivity"
              android:gravity="center_horizontal"
              android:background="@drawable/autumngradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HangDroid"
        android:id="@+id/tv2"
        android:textColor="@color/autumnText"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Player"
        android:id="@+id/b1"
        android:clickable="true"
        android:enabled="true"
        android:layout_marginTop="40dp"
        android:onClick="startSinglePlayerGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/twoplayers"
        android:id="@+id/b2"
        android:clickable="true"
        android:enabled="true"
        android:layout_marginTop="10dp"
        android:onClick="startTwoPlayerGame" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Text Message"
        android:id="@+id/b3"
        android:clickable="true"
        android:enabled="true"
        android:layout_marginTop="10dp"
        android:onClick="openSmsLoad" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores"
        android:id="@+id/b4"
        android:clickable="true"
        android:enabled="true"
        android:layout_marginTop="10dp"
        android:onClick="showScores" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:id="@+id/b5"
        android:clickable="true"
        android:enabled="true"
        android:layout_marginTop="10dp"
        android:onClick="showContacts" />
</LinearLayout>
