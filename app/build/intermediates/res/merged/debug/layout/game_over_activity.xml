<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="edu.slcc.rstewart.hangdroid.GameOverActivity"
              android:gravity="top|center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goiv1"
        android:src="@drawable/hangdroid_0"/>

    <!-- Add a horizontal layout for score -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your score:"
            android:id="@+id/gotv1"
            android:textColor="@color/blk"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/gotv2"
            android:textColor="@color/blk"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:id="@+id/gotv3"
            android:textColor="@color/blk"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- horizontal layout for entering name -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:background="@drawable/autumngradient"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goet1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/wht"
            android:minWidth="40sp"
            android:gravity="center_vertical|left"
            android:minHeight="30dp"
            android:minLines="1"
            android:enabled="true"
            android:lines="1"
            android:linksClickable="false"
            android:maxLines="1"
            android:maxLength="10"
            android:singleLine="true"
            android:hint="Enter your name"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Score"
            android:id="@+id/gob1"
            android:onClick = "saveScore" />
    </LinearLayout>
</LinearLayout>
