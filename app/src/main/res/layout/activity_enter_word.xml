<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/big_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="edu.slcc.rstewart.hangdroid.EnterWordActivity"
              android:gravity="top|center_horizontal"
              android:background="@drawable/autumngradient">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:text="@string/mpinstr"
        android:textColor="@color/blk"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etsw"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@color/wht"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="30dp"
        android:minLines="1"
        android:enabled="true"
        android:lines="1"
        android:linksClickable="false"
        android:maxLines="1"
        android:maxLength="10"
        android:singleLine="true"
        android:textAllCaps="true" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:onClick = "submitSecretWord"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:text="The submitted word must:"
        android:textColor="@color/blk"
        android:textSize="15sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:text="1. Contain 4-10 characters"
        android:textColor="@color/blk"
        android:textSize="15sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:text="2. Contain common keyboard letters and spaces only (no numbers, punctuation, or special characters)"
        android:textColor="@color/blk"
        android:textSize="15sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/big_margin"
        android:text="Leading and trailing spaces are removed. The word will be automatically capitalized."
        android:textColor="@color/blk"
        android:textSize="15sp"/>
</LinearLayout>
